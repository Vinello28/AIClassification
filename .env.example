# AI Classification Development Environment
#
# This file contains environment variables for the AI Classification system.
# Copy this to .env and modify as needed.

# Application Settings
APP_NAME=ai-classification
APP_VERSION=1.0.0
APP_ENV=development

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Model Settings
MODEL_BASE=distilbert-base-multilingual-cased
MODEL_MAX_LENGTH=512
MODEL_BATCH_SIZE=8
MODEL_NUM_EPOCHS=5
MODEL_LEARNING_RATE=1e-5

# Hardware Settings
DEVICE=cuda
MIXED_PRECISION=false
MAX_MEMORY_GB=5

# Paths
MODELS_DIR=./models
LOGS_DIR=./logs
DATA_DIR=./data

# Training Settings
SHUFFLE_DATA=true
SHUFFLE_SEED=42
DATALOADER_NUM_WORKERS=0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Docker Settings
DOCKER_IMAGE_NAME=ai-classification
DOCKER_CONTAINER_NAME=ai-classification-server
DOCKER_PORT=8000

# Database (if needed in future)
# DATABASE_URL=sqlite:///./ai_classification.db

# Security (if needed in future)
# SECRET_KEY=your-secret-key-here
# ACCESS_TOKEN_EXPIRE_MINUTES=30